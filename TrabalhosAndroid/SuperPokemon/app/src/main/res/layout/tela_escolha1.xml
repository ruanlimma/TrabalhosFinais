<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/fundo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Escolha o golpe a ser usado. "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView" />

    <TextView
        android:text="Cada um possui um custo e um dano."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView2" />

    <TextView
        android:text="Você recupera energia ao jogar com outros pokemons."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView3" />

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ENERGIA:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
        <TextView
            android:text="0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/tv_energia" />

    </LinearLayout>

    <ImageView
        android:src="@drawable/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poke" />


    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_golpe1"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#115820"
            android:text="Cabeçada"
            android:textColor="#ffffff"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_golpe1"

            android:paddingLeft="5dp"
            android:textColor="#041009"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Força do golpe: 20            Custo do golpe:30" />

    </LinearLayout>




    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_golpe2"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#115820"
            android:text="Bolhas"
            android:textColor="#ffffff"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_golpe2"

            android:paddingLeft="5dp"
            android:textColor="#041009"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Força do golpe: 50            Custo do golpe:50" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_golpe3"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#115820"
            android:text="Jato D'água"
            android:textColor="#ffffff"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_golpe3"

            android:paddingLeft="5dp"
            android:textColor="#041009"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Força do golpe: 80            Custo do golpe:70" />

    </LinearLayout>

</LinearLayout>
